<div class="row no-gutters m-3">
    <div class="card col-sm-12 col-md-10 col-lg-6 mx-auto shadow">
        <div class="card-header text-center">
            <h5 class="m-0">Please provide the information below for a Quote:</h5>
        </div>

        <div class="card-body">
            @using (Html.BeginForm("InsuranceInfo", "Home", FormMethod.Post)){
                <div class="row no-gutters">
                    <div class="form-group col-md-12">
                        <label>First Name</label>
                        <input name="FirstName" type="text" class="form-control" placeholder="First Name" />
                    </div>

                    <div class="form-group col-md-12">
                        <label>Last Name</label>
                        <input name="LastName" type="text" class="form-control" placeholder="Last Name"/>
                    </div>

                    <div class="form-group col-md-12">
                        <label>Email Address</label>
                        <input name="EmailAddress" type="text" class="form-control" placeholder="Email Address" />
                    </div>

                    <div class="form-group col-md-12">
                        <label>Date of Birth:</label>
                        <input name="DateofBirth" type="date" class="form-control" placeholder="Birth Date" />
                    </div>

                    <div class="form-group col-md-12">
                        <label>What is your car's year</label>
                        <input name="CarYear" type="number" class="form-control" placeholder="Car Year" />
                    </div>

                    <div class="form-group col-md-12">
                        <label>What is your cars make?</label>
                        <input name="CarMake" type="text" class="form-control" placeholder="Car Make" />
                    </div>

                    <div class="form-group col-md-12">
                        <label>What car model do you have?</label>
                        <input name="CarModel" type="text" class="form-control" placeholder="Car Model" />
                    </div>

                    <div class="form-group col-md-12">
                        <label>Have you had a DUI?</label>
                        <input name="hasDUI" type="radio" value= 1 class="form-control"  required />
                        <input name="hasDUI" type="radio" value= 0 class="form-control" />
                    </div>

                    <div class="form-group col-md-12">
                        <label>How many Speeding Tickets have you had?</label>
                        <input name="SpeedingTickets" type="number" class="form-control" placeholder="Speeding Tickets" />
                    </div>

                    <div class="form-group col-md-12">
                        <label>Would you like to have Full Coverage?</label>
                        <input name="FullCoverage" type="radio" value= 1 class="form-control" required />
                        <input name="FullCoverage" type="radio" value= 0 class="form-control" />
                    </div>
                    <button type="submit" class="btn btn-block btn-primary" onclick="location.href='@Url.Action("Calculation", "Home")'">Submit</button>
                 </div>
              
                            
            }
        </div>
    </div>
</div>
<div class="row no-gutters m-3">
    <div class="card col-sm-12 col-md-10 col-lg-6 mx-auto shadow">
        <div class="card-header text-center">
            <h5 class="m-0">Please provide the information below for a Quote:</h5>
        </div>

        <div class="card-body">
            @using (Html.BeginForm("InsuranceInfo", "Home", FormMethod.Post)){
                <div class="row no-gutters">
                    <div class="form-group col-md-12">
                        <input name="FirstName" type="text" class="form-control" placeholder="First Name" />
                    </div>

                    <div class="form-group col-md-12">
                        <input name="LastName" type="text" class="form-control" placeholder="Last Name"/>
                    </div>

                    <div class="form-group col-md-12">
                        <input name="EmailAddress" type="text" class="form-control" placeholder="Email Address" />
                    </div>

                    <div class="form-group col-md-12">
                        <input name="DateofBirth" type="date" class="form-control" placeholder="Birth Date" />
                    </div>

                    <div class="form-group col-md-12">
                        <input name="CarYear" type="int" class="form-control" placeholder="Car Year" />
                    </div>

                    <div class="form-group col-md-12">
                        <input name="CarMake" type="text" class="form-control" placeholder="Car Make" />
                    </div>

                    <div class="form-group col-md-12">
                        <input name="CarModel" type="checkbox" class="form-control" placeholder="Have you had a DUI" />
                    </div>

                    <div class="form-group col-md-12
                        <label>How many Speeding Tickets have you had?</label>
                        <input name="SpeedingTickets" type="int" class="form-control" placeholder="How many Speeding tickets do you have?" />
                    </div>

                    <div class="form-group col-md-12">
                        <label>Would you like to have Full Coverage?
                        <input name="FullCoverage" type="checkbox" class="form-control" placeholder="Would you like to have full coverage?" />
                    </div>
                    <button type="submit" class="btn btn-block btn-primary">Submit</button>
                 </div>
            }
        </div>
    </div>
</div>